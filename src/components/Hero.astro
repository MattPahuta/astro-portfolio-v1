---
import { Image } from 'astro:assets';

import avatar from '../assets/images/profile-square.webp';
import Socials from './Socials.astro'

---

<section class="mx-auto max-w-screen-lg py-6">
  <div class="flex flex-col gap-y-8 items-center md:flex-row md:justify-between md:gap-x-20">
    <!-- hero content -->
    <div>
      <!-- ToDo: make this just an h1 with a styled span element, local "accent" class Or, tailwind class-->
      <h1 class="text-4xl font-semibold mb-3">Hi, I'm Matt. <span class="font-mono text-2xl font-medium text-emerald-500">Full-stack web developer.</span></h1>
      
      <p class="mt-6 text-lg leading-9">I'm a Full-Stack Developer specializing in React.js, Next.js, Node.js, and database management. I build scalable, high-performance web applications, robust back-end architecture, and efficient API integrations.<p>
      <Socials />
    </div>
    <!-- hero image -->
    <div data-testid="hero-img" class="shrink-0">
      <Image class="aspect-square rounded-2xl object-cover w-80 shadow-lg shadow-slate-400 dark:shadow-slate-950 hover:rotate-3" src={avatar} alt="Matt Pahuta" />
    </div>
  </div>

</section>